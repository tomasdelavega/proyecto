<Window x:Class="ClienteFisio.Interfaz.VConfigCon"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Icon="/data/images/Settings.png"
    Title="Configuración conexión" Height="230" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded" Closing="Window_Closing">
